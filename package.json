{
  "name": "render-dds",
  "version": "0.8.4",
  "description": "Render Demo Design System - A React component library for building beautiful demos",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles/globals.css",
    "./tailwind": {
      "types": "./dist/tailwind-preset.d.ts",
      "import": "./dist/tailwind-preset.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsup && node scripts/add-use-client.js",
    "dev": "tsup --watch",
    "ladle": "ladle serve",
    "ladle:build": "ladle build",
    "create:component": "node scripts/create-component.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "release:patch": "npm run build && npm version patch && git push && git push --tags",
    "release:minor": "npm run build && npm version minor && git push && git push --tags",
    "release:major": "npm run build && npm version major && git push && git push --tags"
  },
  "keywords": [
    "react",
    "components",
    "design-system",
    "tailwind",
    "typescript",
    "ui",
    "demo"
  ],
  "author": "Render",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/R4ph-t/DDS.git"
  },
  "peerDependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "clsx": "^2.1.1",
    "react-icons": "^5.5.0",
    "shiki": "^1.22.2",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-python": "^6.1.6",
    "@codemirror/lang-yaml": "^6.1.1",
    "@ladle/react": "^5.1.0",
    "@mdx-js/mdx": "^3.1.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.8.1",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@uiw/react-codemirror": "^4.23.5",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.1.13",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vite": "^7.1.9"
  }
}
